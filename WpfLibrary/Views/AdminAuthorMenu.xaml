        </ListBox>
        <Button x:Name="ButtonEdit" Content="Edit" HorizontalAlignment="Left" Margin="88,173,0,0"  VerticalAlignment="Top" Width="129" Height="28" >

        </Button>
        <Button x:Name="ButtonDelete" Content="Delete" HorizontalAlignment="Left" Margin="88,231,0,0"  VerticalAlignment="Top" Width="129" Height="28"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,75,140,0"  Text="Authors" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="ButtonBack" Content="Back" HorizontalAlignment="Left" Margin="88,0,0,38.6"  Width="114" RenderTransformOrigin="0.497,0.503" Height="34" VerticalAlignment="Bottom">

        </Button>
