        xmlns:local="clr-namespace:WpfLibrary.Views"
        mc:Ignorable="d"
        Title="AdminAuthorMenu" Height="450" Width="800">
    <Grid Margin="0,0,-0.4,0">
        <Image Source="pack://application:,,,/Content/Backgrounds/images.jpg" Stretch="Fill"/>
        <Button x:Name="ButtonAdd" Content="Add" HorizontalAlignment="Left" Margin="88,112,0,0"  VerticalAlignment="Top" Width="129" Height="28">

        </Button>
        <ListBox Margin="0,112,39,38.6"  HorizontalAlignment="Right" Width="267">
